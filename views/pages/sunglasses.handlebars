<main>
  <section class="grid-container">
    <div class="secondary-image">
      <img src="/img/mainsun.jpg" alt="Secondary image" />
    </div>

    <section class="best-sellers">
      <h2>Sunglasses</h2>
      <div class="products-grid">
        {{#each sunglasses}}
          <div class="product-item">
            <img src="{{this.image}}" alt="{{this.name}}" />
            <h3>{{this.name}}</h3>
            <p>{{this.price}} SEK</p>
            <form method="post" action="/cart/add">
            <input type="hidden" name="productId" value="{{id}}">
           <button class="add-to-cart-btn" data-id="{{product.id}}" onclick="addToCart({{id}})">Add to cart</button> 
            </form>
        </div>
      {{/each}}
    </div>
  </section>
  <div class="pagination">
  {{#if totalPages}}
    {{#each (range 1 totalPages)}}
      <a href="/sunglasses?page={{this}}" class="{{#ifEquals this ../currentPage}}active{{/ifEquals}}">{{this}}</a>
    {{/each}}
  {{/if}}
</div>

</main>


