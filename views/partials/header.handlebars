<header>
  <div class="header-top-line">
    <p>20% OFF on purchases above 4000 SEK!</p>
  </div>

  <div class="header-middle-line">
    <div class="store-name">
      <h1>LUMILUXE</h1>
    </div>

      <div class="icon-cart icon-link" onclick="toggleCart()">
        <svg class="w-6 h-6 text-gray-800 dark:text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 10V6a3 3 0 0 1 3-3v0a3 3 0 0 1 3 3v4m3-2 .917 11.923A1 1 0 0 1 17.92 21H6.08a1 1 0 0 1-.997-1.077L6 8h12Z"/>
        </svg>
        <span id="cart-count">0</span>
      </div>
    </div>
  </div>

  <div class="header-bottom-line">
    <input type="checkbox" id="menu-toggle" class="menu-toggle">
    <label for="menu-toggle" class="menu-icon">
      <svg class="w-6 h-6 text-gray-800 dark:text-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
        <path stroke="currentColor" stroke-linecap="round" stroke-width="2" d="M5 7h14M5 12h14M5 17h14"/>
      </svg>
    </label>

    <nav class="sidebar">
      <ul class="sidebar-menu">
        <li><a href="/">Home</a></li>
        <li><a href="/sunglasses">Sunglasses</a></li>
        <li><a href="/glasses">Glasses</a></li>
        <li><a href="/contact">Contact us</a></li>
        
        {{#if session.isLoggedIn}}
      <li><a href="/logout">Logout</a></li>
      <li>Welcome, {{session.un}}!</li>
    {{else}}
      <li><a href="/login">Login</a></li>
      <li><a href="/register">Register</a></li>
    {{/if}}
      </ul>
    </nav>

    <nav>
      <ul class="main-menu">
        <li><a href="/">Home</a></li>
        <li><a href="/sunglasses">Sunglasses</a></li>
        <li><a href="/glasses">Glasses</a></li>
        <li><a href="/contact">Contact us</a></li>
        
        {{#if session.isLoggedIn}}
        {{#if session.isAdmin}}
      <li><a href="/users">User Management</a></li>
    {{/if}}
      <li><a href="/logout">Logout</a></li>
      <li>Welcome, {{session.un}}!</li>
    {{else}}
      <li><a href="/login">Login</a></li>
    {{/if}}
      </ul>
    </nav>
  </div>
</header>

