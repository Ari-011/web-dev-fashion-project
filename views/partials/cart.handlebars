<div id="cart-panel" class="cart-panel">
  <div class="cart-header">
    <h3>Shopping Cart</h3>
    <button class="close-cart" onclick="toggleCart()">Ã—</button>
  </div>
  <div id="cart-items">
    <div class="cart-item">
      <img src="/img/sunglass1.jpg" alt="Classic Aviator Sunglasses" />
      <div class="cart-details">
        <h4>Classic Aviator Sunglasses</h4>
        <p>1,200 SEK</p>
        <div class="quantity-controls">
          <button onclick="decreaseQuantity(1)">-</button>
          <span>1</span>
          <button onclick="increaseQuantity(1)">+</button>
        </div>
        <p class="item-total">1,200 SEK</p>
      </div>
      <button class="remove-btn" onclick="removeItem(1)">Remove</button>
    </div>
  </div>
  <div class="order-summary">
    <div class="order-total">
      <span>Order Total</span>
      <span>1,200 SEK</span>
    </div>
    <p class="shipping-note">Shipping, Tax, and Shipping Protection not included</p>
    <button class="checkout-btn">Proceed to Checkout</button>
  </div>
</div>
